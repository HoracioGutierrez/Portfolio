  "dependencies": {
    "connect-livereload": "^0.6.1",
    "express": "^4.17.1",
    "livereload": "^0.9.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "less": "^4.1.1"
  }
}
